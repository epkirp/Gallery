<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/newFragment"
    tools:ignore="UnusedNavigation">
    <fragment
        android:id="@+id/newFragment"
        android:name="com.example.gallery.fragments.NewFragment"
        android:label="NewFragment" >
        <action
            android:id="@+id/action_newFragment_to_imageInfoFragment"
            app:destination="@id/imageInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/popularFragment"
        android:name="com.example.gallery.fragments.PopularFragment"
        android:label="PopularFragment" >
        <action
            android:id="@+id/action_popularFragment_to_imageInfoFragment"
            app:destination="@id/imageInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/imageInfoFragment"
        android:name="com.example.gallery.fragments.ImageInfoFragment"
        android:label="ImageInfoFragment" />
</navigation>